<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.MainO">
        <item name="colorButtonNormal">@color/color4</item>
        <item name="colorControlHighlight">@color/color1</item>
        </style>

    <style name="AppTheme.MainT">
        <item name="colorButtonNormal">@color/color3</item>
        <item name="colorControlHighlight">@color/color1</item>
</style>

    <style name="AppTheme.MainTh">
        <item name="colorButtonNormal">@color/color5</item>
        <item name="colorControlHighlight">@color/color1</item>
    </style>

    <style name="AppTheme.ProfileO">
        <item name="colorButtonNormal">@color/color7</item>
        <item name="colorControlHighlight">@color/color1</item>
    </style>

    <style name="AppTheme.ProfileT">
        <item name="colorButtonNormal">@color/color8</item>
        <item name="colorControlHighlight">@color/color1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
